{
  "name": "dust",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "serve:test": "ng serve --host 0.0.0.0 --port 4201 --configuration testing",
    "clean": "touch dist/readme.md && rm -r dist/*",
    "build-sources": "yarn run tailwind:build && ng build --base-href /dust/",
    "build": "yarn run clean && yarn run build-sources",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "doc-test": "playwright test",
    "doc-test:dev": "playwright test --ui",
    "tailwind:build": "tailwindcss -i tailwind.config.css -o src/styles/tailwind-build.scss",
    "tailwind:watch": "tailwindcss -i tailwind.config.css -o src/styles/tailwind-build.scss --watch",
    "dev": "concurrently \"yarn start\" \"yarn run serve:test\" \"yarn run tailwind:watch\" \"yarn run start-proxy\"",
    "coverage": "ng test --no-watch --code-coverage",
    "start-proxy": "node cors_proxy/server.js",
    "sonar:scan": "sonar-scanner -Dsonar.projectKey=Dust -Dsonar.host.url=http://localhost:9000 -Dsonar.token=<sonar-token>"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.0",
    "@angular/cdk": "^19.2.1",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.1",
    "@angular/material-luxon-adapter": "^19.2.1",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "ace-common-components": "^19.0.4",
    "ace-common-util": "1.0.36",
    "immutable": "^5.0.3",
    "luxon": "^3.5.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@endyjasmi/karma-playwright-launcher": "^0.0.4",
    "@playwright/test": "^1.50.1",
    "@tailwindcss/cli": "^4.0.9",
    "@types/express": "^5.0.0",
    "@types/jasmine": "~5.1.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.17.22",
    "concurrently": "^9.1.2",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "sonar-scanner": "^3.1.0",
    "tailwindcss": "^4.0.9",
    "tsx": "^4.19.3",
    "typescript": "~5.8.2"
  }
}